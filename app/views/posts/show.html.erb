<p id="notice"><%= notice %></p>

<h2><%= @post.title %></h2>
<p><%= @post.text %></p>

<hr>

<h3>Add a comment:</h3>
<%= render "comments/form", comment: @comment %>

<hr>

<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <p><%= comment.text %></p>
<% end %>

<hr>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', posts_path %>
